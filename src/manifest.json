{
    "name": "Dom Hack",
    "description": "",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup/index.html"
    },
    "side_panel": {
        "default_path": "side_panel/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://*/**"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "sidePanel"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}